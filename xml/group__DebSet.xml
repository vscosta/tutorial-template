    <title>Debugger Control</title>
    <innerclass refid="classspy_21" prot="public">spy/1</innerclass>
    <innerclass refid="classnospy_21" prot="public">nospy/1</innerclass>
    <innerclass refid="classnospyall_20" prot="private">nospyall/0</innerclass>
